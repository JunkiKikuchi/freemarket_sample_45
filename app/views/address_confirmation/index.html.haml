.adress__confirmation
  %header
    %a{href: "#"}
      %img.logo{alt: "", src: "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?376951604"}
    .registration__bar
      %ol
        %li
          会員情報
          .nav__bar.nav__bar--first.phone__bar--after
        %li
          電話番号認証
          .nav__bar.nav__bar--first.phone__bar
        %li.l--first
          お届け先住所入力
          .nav__bar.nav__bar--after.phone__bar
        %li
          支払い方法
          .nav__bar.nav__bar--after
        %li
          完了
          .nav__bar.nav__bar--last
  .adress__confirmation--main
    .adress__confirmation--main--container
      .container__header
        %h2 住所入力
      .container__main
        %form.container__main--form{action: "payment", method: "get"}
          .form__child--first
            %label  お名前
            %span.require  必須
            %input{type: "text", placeholder: "例）山田"}
            %input{type: "text", placeholder: "例）彩"}
          .form__child
            %label  お名前カナ
            %span.require  必須
            %input{type: "text", placeholder: "例）ヤマダ"}
            %input{type: "text", placeholder: "例）アヤ"}
          .form__child
            %label  郵便番号
            %span.require  必須
            %input{type: "text", placeholder: "例）123-4567"}
          .form__child
            %label  都道府県
            %span.require  必須
            .form__child--prefectures
              %select.prefectures__select
                = render 'prefectures'
              %i.fas.fa-angle-down
          .form__child
            %label  市区町村
            %span.require  必須
            %input{type: "text", placeholder: "例）横浜市緑区"}
          .form__child
            %label  番地
            %span.require  必須
            %input{type: "text", placeholder: "例）青山1-1-1"}
          .form__child
            %label  建物名
            %span.not-require  任意
            %input{type: "text", placeholder: "例）アジアビル９F"}
          .form__child
            %label  電話
            %span.not-require  任意
            %input{type: "text", placeholder: "例）09012345678"}
          .form__child
            %button{type: "submit"}次へ進む
  = render 'devise/registrations/sign_up_footer'
